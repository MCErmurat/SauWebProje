@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin Paneli - Ana Sayfa";
}

<div class="row">
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Toplam Randevular</h5>
                <p class="card-text">Bugün toplam randevu sayısını gösterir.</p>
                <a asp-controller="Appointments" asp-action="Randevular" class="btn btn-primary">Randevuları Görüntüle</a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Personel Yönetimi</h5>
                <p class="card-text">Personel ekleyebilir ve düzenleyebilirsiniz.</p>
                <a asp-area="" asp-controller="Admin" asp-action="PersonelList" class="btn btn-primary">Personelleri Görüntüle</a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Hizmetler</h5>
                <p class="card-text">Hizmet ekleyebilir ve düzenleyebilirsiniz.</p>
                <a asp-area="" asp-controller="Admin" asp-action="HizmetList"  class="btn btn-primary">Hizmetleri Görüntüle</a>
            </div>
        </div>
    </div>
</div>

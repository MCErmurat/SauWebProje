@model List<BarberShop.Models.Appointments>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Onaylı Randevular";
}

<h1>Onaylı Randevular</h1>

@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Hizmet Adı</th>
                <th>Personel Adı</th>
                <th>Tarih</th>
                <th>Saat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.Hizmet.Ad</td>
                    <td>@randevu.Personel.PersonelAd @randevu.Personel.PersonelSoyad</td>
                    <td>@randevu.Tarih.ToString("dd.MM.yyyy")</td>
                    <td>@randevu.Saat</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Henüz onaylı randevu bulunmamaktadır.</p>
}
